{
  "compilerOptions": {
    "target": "es6",                        // Use ES6 for better performance
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": false,                  // Change to false for better type checking
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,                        // Allow emission of compiled JS
    "jsx": "react-jsx",
    "incremental": true                     // Enable incremental compilation
  },
  "include": [
    "src"
  ]
}
